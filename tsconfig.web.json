{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "src/renderer/src/env.d.ts",
        "src/renderer/src/**/*",
        "src/renderer/src/**/*.vue",
        "src/preload/*.d.ts",
        "src/contracts/**/*",
        "src/contracts/*"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@renderer/*": ["src/renderer/src/*"],
            "@contracts/*": ["src/contracts/*"]
        }
    }
}
